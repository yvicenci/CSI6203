		"prefix": "shcolour",
		"body": [ 
			"black='\\033[30m'",
			"red='\\033[31m'",
			"green='\\033[32m'",
			"brown='\\033[33m'",
			"blue='\\033[34m'",
			"purple='\\033[35m'",
